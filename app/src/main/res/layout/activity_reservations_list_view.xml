<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".listviews.ReservationsListView">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reservations_start"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"
            android:text="00:00"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/reservations_separationHour"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="@string/classDay_separationHour"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/reservations_end"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="00:00"
            android:textColor="@color/black"
            android:textSize="14dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/reservations_classType"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:text="@string/classDay_typeCrossfit"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reservations_reservesDone"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:text="00"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/reservations_separatorReserves"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:text="/"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/reservations_totalReserves"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginRight="30dp"
            android:gravity="center_vertical"
            android:text="00"
            android:textColor="@color/black"
            android:textSize="14dp" />

    </LinearLayout>

</RelativeLayout>